<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>Controleur.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Register</servlet-name>
  	<servlet-class>Controleur.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Show</servlet-name>
  	<servlet-class>Controleur.ShowServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>Accueil</servlet-name>
  	<servlet-class>Controleur.AccueilServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Achat</servlet-name>
  	<servlet-class>Controleur.AchatServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Reservation</servlet-name>
  	<servlet-class>Controleur.ReservationServlet</servlet-class>
  </servlet>
 
  
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  	<servlet-name>Register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Show</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>Accueil</servlet-name>
  	<url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Achat</servlet-name>
  	<url-pattern>/acheter</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  	<servlet-name>Reservation</servlet-name>
  	<url-pattern>/reserver</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>login</welcome-file>
  </welcome-file-list>
</web-app>
